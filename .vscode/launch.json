{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Debug (GDB)",
            "type": "cppdbg",
            "request": "launch",
            "program": "D:/Product/Code/VideoEngine/EngineCpp/build/VideoRenderer.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "D:/Product/Code/VideoEngine/EngineCpp/build",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}



